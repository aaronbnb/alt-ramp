{
  "manifest_version": 2,

  "name": "achlls_extension",
  "author": "aaronbnb",
  "contributors": [{
    "name": "Makewell77"
    }
  ],
  "description": "This extension generates alt attributes for webpage images",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
   "css": ["./styles.css"],
   "js": ["./content.js"],
   "matches": ["*://*/*"]
 }],
 "web_accessible_resources": [
    "icon.png"
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "clipboardRead",
    "pageCapture",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ]
}
