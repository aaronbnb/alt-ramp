{
  "manifest_version": 2,

  "name": "alt-ramp",
  "author": "aaronbnb",
  "description": "This extension generates alt attributes for webpage images",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Alt Ramp",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
   "css": ["styles.css"],
   "matches": ["*://*/*"]
 }],
 "background": {
   "scripts": [
      "background.bundle.js"
     ]
   },
 "web_accessible_resources": [
    "icon.png"
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "clipboardRead",
    "pageCapture",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ]
}
